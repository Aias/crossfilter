{
	"compilerOptions": {
		"target": "ES2020",
		"module": "ESNext",
		"moduleResolution": "bundler",
		"strict": true,
		"skipLibCheck": true,
		"declaration": true,
		"esModuleInterop": true,
		"outDir": "dist",
		"rootDir": "src",
		"types": ["vitest/globals"]
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "dist"]
}
